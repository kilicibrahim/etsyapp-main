                padding: 20px;
                background-color: white;
                border-radius: 10px;
            }

            h1 {
                color: #333;
            }

            p {
                color: #777;
            }

            .button {
                display: inline-block;
                color: white;
                background-color: #007BFF;
                padding: 10px 20px;
                margin-top: 20px;
                border-radius: 5px;
                text-decoration: none;
                transition: background-color 0.3s ease;
            }

            .button:hover {
                background-color: #0056b3;
            }
        </style>
    </head>
